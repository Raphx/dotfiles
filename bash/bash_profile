#
# ~/.bash_profile
#

# Clear PATH every time profile is sourced.
# Useful in tmux
if [ -f /etc/profile ]
then
  PATH=""
  source /etc/profile
fi

# Append to history file when shell exits
shopt -s histappend

# Standard programs
export EDITOR=vim
export PAGER=less

# Increase bash history saves
export HISTSIZE=5000
# Ignore bash history duplicates
export HISTCONTROL=ignoredups:erasedups

# fzf include hidden files and exclude certain directories
export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'

# Disable program history files
export LESSHISTFILE=-
export NODE_REPL_HISTORY=""

# Include local bin directory in PATH
export PATH="$HOME/.local/bin:$PATH"

# Shell prompt
PS1='\n\w\n$ '

# gpg-agent tty
GPG_TTY=$(tty)
export GPG_TTY

# Aliases
alias g='hub'
alias ll='ls -al'
alias pig='ping google.com'
