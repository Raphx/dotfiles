#
# ~/.bash_profile
#

#
# Environment variable
#
## Global editor
export EDITOR=vim

## ls colors
export LS_COLORS='rs=0:ex=00;32'

## fzf include hidden files and exclude certain directories
export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'

## SSH agent
export SSH_AUTH_SOCK="$XDG_RUNTIME_DIR/ssh-agent.socket"

## n - nodejs version manager
export N_PREFIX=$HOME/.nodejs

## p - python version manager
export P_PREFIX=$HOME/.python

## user home bin
export PATH="$HOME/.local/bin:$PATH"

#
# Source bashrc
#
[[ -f ~/.bashrc ]] && . ~/.bashrc
