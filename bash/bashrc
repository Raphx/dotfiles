#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

#
# Shell prompt
#
PS1="\n\w\n"

#
# Environment variable
#
## gpg
export GPG_TTY=$(tty)

#
# Alias
#
alias ls='ls --color=auto'
alias ll='ls -alv --group-directories-first'
alias pig='ping google.com'
alias ns='netctl start'
alias nst='netctl stop'
alias be='bundle exec'
alias g='hub'
alias xclip='xclip -selection c'
alias zz='i3lock -e && xset dpms force off'

#
# Tab completion
#
## completion for `g' alias
_completion_loader hub
complete -o bashdefault -o default -o nospace -F _git g

#
# Activate / deactivate asdf
#
asdf-set () {
  . $HOME/.asdf/asdf.sh
  . $HOME/.asdf/completions/asdf.bash
}

asdf-unset () {
  PATH="${PATH//$HOME\/.asdf\/bin:/}"
  PATH="${PATH//$HOME\/.asdf\/shims:/}"
  complete -r asdf
  hash -r
}
