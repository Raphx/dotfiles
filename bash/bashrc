#
# ~/.bashrc
#

# If not running interactively, don't do anything
[[ $- != *i* ]] && return

#
# Shell prompt
#
PS1="\n\w\n$ "

#
# Environment variable
#
## gpg
export GPG_TTY=$(tty)

#
# Alias
#
alias ls='ls --color=never'
alias ll='ls -alv --group-directories-first'
alias pig='ping google.com'
alias ns='sudo netctl start'
alias nsr='sudo netctl restart'
alias nst='sudo netctl stop'
alias be='bundle exec'
alias g='hub'
alias hdev="ssh-add $HOME/.ssh/dev"
alias xclip='xclip -selection c'
alias zz='xset dpms force off'
alias zzl='xset dpms force off && i3lock -e'

#
# Tab completion
#
## completion for `g' alias
_completion_loader hub
complete -o bashdefault -o default -o nospace -F _git g

#
# Activate asdf
#
. "$HOME/.asdf/asdf.sh"
. "$HOME/.asdf/completions/asdf.bash"

asdf-unset () {
  PATH="${PATH//$HOME\/.asdf\/bin:/}"
  PATH="${PATH//$HOME\/.asdf\/shims:/}"
  complete -r asdf
  hash -r
}
