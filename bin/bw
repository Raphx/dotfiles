#!/usr/bin/env bash

# System upgrade script

echo ""
echo "======================================"
echo "   brew and cask"
echo "======================================"
echo ""

brew update \
  && brew upgrade \
  && brew upgrade --cask \
  && brew autoremove \
  && brew cleanup -s

echo ""
echo "======================================"
echo "   python3 pip setuptools wheel"
echo "======================================"
echo ""

pip3 install -U pip setuptools wheel

echo ""
echo "======================================"
echo "   ruby gems"
echo "======================================"
echo ""

gem update --system -V
gem update -V
gem cleanup -V

echo ""
echo "======================================"
echo "   tldr local cache"
echo "======================================"
echo ""

tldr -u

echo ""
echo "======================================"
echo "   vim plugins"
echo "======================================"
echo ""

git -C "$HOME/.local/share/vim/pack/plugins" submodule foreach git pull
