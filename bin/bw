#!/usr/bin/env zsh

# System upgrade script

echo ""
echo "======================================"
echo "   brew and cask"
echo "======================================"
echo ""

brew update \
  && brew upgrade \
  && brew cask upgrade \
  && brew cleanup -s


echo ""
echo "======================================"
echo "   vim plugins"
echo "======================================"
echo ""

git -C "$HOME/.local/share/vim/pack/plugins" submodule foreach git pull origin master
