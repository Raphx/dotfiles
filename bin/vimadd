#!/usr/bin/env bash

usage="Usage: $0 <git_ssh_url>

Add vim plugin as git submodule.

Arguments:

  git_ssh_url    Git SSH URL

Options:

  -h    Show this help message"

for i in "$@"
do
case $i in
-h)
  echo "$usage"
  exit 0
  ;;
esac
done

url=$1
name=$(basename $url)
name=${name%.git}

git -C ~/.vim submodule add $url bundle/$name
