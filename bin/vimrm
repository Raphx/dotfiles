#!/usr/bin/env bash

usage="Usage: $0 <plugin_name>

Remove vim plugin from git submodule.

Arguments:

  plugin_name    The name of plugin, usually it is the name
                 of the plugin's GitHub repository.

Options:

  -h    Show this help message"

for i in "$@"
do
case $i in
-h)
  echo "$usage"
  exit 0
  ;;
esac
done

name=$1
dir=~/.vim

git -C $dir submodule deinit -f $dir/bundle/$name
git -C $dir rm -rf $dir/bundle/$name
rm -rf $dir/.git/modules/bundle/$name
