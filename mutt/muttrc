# Generic
set ssl_force_tls
set sleep_time = 0
set timeout = 15
set mail_check = 60
set wrap = 80
set header_cache = ~/.cache/mutt
set message_cachedir = ~/.cache/mutt
set fast_reply
set delete
unset help
unset mark_old
unset user_agent

# Index view
set sort = threads

# Pager view
set pager_stop
set tilde
unset markers

# Key bindings
bind pager \Cy previous-line
bind pager \Ce next-line
bind pager \Cu half-up
bind pager \Cd half-down

# Style
color normal white default

# Server configurations
source ~/.mutt/account
