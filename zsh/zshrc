# Shell prompt
export PS1='%~ %# '

# Set locale
export LANG=en_GB.UTF-8
export LC_ALL=en_GB.UTF-8

# Standard programs
export EDITOR=vim
export PAGER=less
export BROWSER=open

# fzf include hidden files and exclude certain directories
export FZF_DEFAULT_COMMAND='fd --type f --hidden --follow --exclude .git'

# Reset PATH
export PATH="/usr/local/bin:/usr/bin:/bin:/usr/local/sbin:/usr/sbin:/sbin"
# Use coreutils
export PATH="/usr/local/opt/coreutils/libexec/gnubin:$PATH"
# Use user-installed ruby
export PATH="/usr/local/opt/ruby/bin:$PATH"
# Include user-installed python packages
export PATH="/Users/raphx/Library/Python/3.7/bin:$PATH"
# Include $HOME/.local/bin
export PATH="$HOME/.local/bin:$PATH"
# Rust toolchain
export PATH="$HOME/.cargo/bin:$PATH"
# Android development
export ANDROID_HOME=$HOME/Library/Android/sdk
export PATH=$PATH:$ANDROID_HOME/emulator
export PATH=$PATH:$ANDROID_HOME/tools
export PATH=$PATH:$ANDROID_HOME/tools/bin
export PATH=$PATH:$ANDROID_HOME/platform-tools

# Include additional user command completion functions
fpath=($HOME/.local/share/zsh/site-functions $fpath)

# gpg-agent tty
GPG_TTY=$(tty)
export GPG_TTY

# Aliases
alias g='hub'
alias ll='ls -alv --group-directories-first'
alias pig='ping google.com'

# Load completion
autoload -Uz compinit
compinit

# Use vi key binding
bindkey -v
bindkey ^R history-incremental-search-backward

# asdf
. /usr/local/opt/asdf/asdf.sh
. /usr/local/opt/asdf/etc/bash_completion.d/asdf.bash
